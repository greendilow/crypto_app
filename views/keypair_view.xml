<?xml version="1.0"?>
<odoo>
  <record id="view_form_keypair" model="ir.ui.view">
    <field name="name">Keypair Form</field>
    <field name="model">crypto.block</field>
    <field name="arch" type="xml">
      <form string="Keypair">
    <header>
      <button name="button_sign_file" type="object"
          string="Sign file" />
      <button name="button_verify_sign" type="object"
          string="Verify sign" />
    </header>
    <sheet>
        <group>
          <field name="keypair_name"/>
          <field name="active" />          
        </group>
    </sheet>
      </form>
    </field>
  </record>
  <record id="view_search_keypair" model="ir.ui.view">
    <field name="name">Keypair Filters</field>
    <field name="model">crypto.block</field>
    <field name="arch" type="xml">
      <search>
        <field name="keypair_name"/>
        <filter name="filter_inactive"
                string="Inactive"
                domain="[('active','=',True)]"/>
        <filter name="filter_active"
                string="Active"
                domain="[('active','=',False)]"/>
      </search>
    </field>
  </record>
</odoo>
